PATH=/home/{{ ansible_user_id }}/bin:$PATH
PATH=$PATH:/home/{{ ansible_user_id }}/.gem/ruby/2.5.0/bin:~/.cargo/bin

# put this in ~/.profile or whatever u use
sserver() {
	xdg-open "http://localhost:${1}" && python -m SimpleHTTPServer $1
}

export _JAVA_AWT_WM_NONREPARENTING=1
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_COLLATE=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
#export QT_QPA_PLATFORMTHEME=gtk2
#export QT_STYLE_OVERRIDE=gtk
export QT_QPA_PLATFORMTHEME="qt5ct"

export PATH="$HOME/.cargo/bin:$PATH"
export VISUAL=vim
export EDITOR=vim
export TERM=xterm
export MUPLOAD_TOKEN={{ upload_token }}
export UPLOAD_URL={{ upload_url }}

export XDG_CONFIG_HOME="$HOME/.config"
export BEMENU_OPTS='--tf=#81a1c1 --ff=#81a1c1 --nf=#81a1c1 --hf=#3d4b61'

if [ ! -S ~/.ssh/ssh_auth_sock ]; then
	eval `ssh-agent`
	ln -sf "$SSH_AUTH_SOCK" ~/.ssh/ssh_auth_sock
fi

export SSH_AUTH_SOCK=~/.ssh/ssh_auth_sock
ssh-add -l > /dev/null || ssh-add

