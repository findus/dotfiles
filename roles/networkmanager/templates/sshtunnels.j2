#!/bin/bash

{% for tunnel in sshtunnels %}
	kill $(ps aux | grep autossh | grep {{ tunnel.portl }} | awk '{print $2;}') > /dev/null
{% endfor %}
sleep 2


COUNT=$(ssh-add -l | wc -l)
if [ "$COUNT" -eq 0 ];
then
	exit -1
fi

AUTOSSH_DEBUG=true
AUTOSSH_LOGLEVEL=7
AUTOSSH_POLL=30

{% for tunnel in sshtunnels %}
	AUTOSSH_POLL=30 autossh -f -M 0 -o "ServerAliveInterval 30" -o "ServerAliveCountMax 3" -L {{ tunnel.portl }}:localhost:{{ tunnel.portr }} {{ tunnel.url }} &
{% endfor %}

